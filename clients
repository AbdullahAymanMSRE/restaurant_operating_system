#!/bin/bash

void order_status_callback(int order_id, const char* status) {
    printf("\nOrder %d Update: %s\n", order_id, status);
}

create_order() {
    printf("\nOrder %d Update: %s\n", order_id, status);
}

create_order() {
    echo "Menu:"
    echo "1. Burger ($9.99)"
    echo "2. Pizza ($12.99)"
    echo "3. Salad ($7.99)"
    echo "4. Drink ($2.99)"
    
    items=()
    quantities=()
    
    while true; do
        read -p "Enter item number (0 to finish): " item
        if [ "$item" == "0" ]; then
            break
        fi
        read -p "Enter quantity: " quantity
        order_id=$(./restaurant_system create_order "${items[@]}" "${quantities[@]}")
        echo "Would you like to monitor this order? (y/n)"
        read monitor
        if [ "$monitor" == "y" ]; then
            ./restaurant_system monitor_order $order_id
        fi
        quantities+=($quantity)
    done
    
    order_id=$(./restaurant_system create_order "${items[@]}" "${quantities[@]}")
    echo "Would you like to monitor this order? (y/n)"
    read monitor
    if [ "$monitor" == "y" ]; then
        ./restaurant_system monitor_order $order_id
    fi
}
